<UserControl x:Class="IDE.Documents.Views.BoardEditorGeneralSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resources="clr-namespace:IDE.Resources.Local;assembly=IDE.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>

        <CheckBox Content="{x:Static resources:Strings.SettingsBoardOnlineDRCLabel}"
                  IsChecked="{Binding OnlineDRC}"
                  Margin="5,10,5,5"/>

        <CheckBox Content="{x:Static resources:Strings.SettingsBoardRepourPolysOnDocumentChangeLabel}"
                   IsChecked="{Binding RepourPolysOnDocumentChange}"
                   Margin="5" />

        <CheckBox Content="{x:Static resources:Strings.SettingsBoardShowUnconnectedSignalsLabel}"
                  IsChecked="{Binding ShowUnconnectedSignals}"
                  Margin="5" />
    </StackPanel>
</UserControl>
